<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".itemdetails.RoutesDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/lemonchiffon" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="125dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="vertical"
                    android:background="@drawable/shape_button_half">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textSize="25dp"
                        android:text="景点名称" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="标签一"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="标签二"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="25dp"
                            android:text="4.6评分"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="分"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:text="2005年毕业于上海戏剧学院表演系"/>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="75dp"
                            android:orientation="vertical">

                            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:isIndicator="true"
                                android:numStars="3"
                                android:soundEffectsEnabled="true"
                                style="?android:attr/ratingBarStyleSmall"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="616条点评>"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:text="2005年毕业于上海戏剧学院表演系，同年在仙侠剧《仙剑奇侠传》"/>

                        <TextView
                            android:layout_width="45dp"
                            android:layout_height="35dp"
                            android:gravity="center"
                            android:text="导航>"
                            android:textColor="@color/darkorange" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:text="2005年毕业于上海戏剧学院表演系，同年在仙侠剧《仙剑奇侠传》"/>

                        <TextView
                            android:layout_width="45dp"
                            android:layout_height="35dp"
                            android:gravity="center"
                            android:text="导航>"
                            android:textColor="@color/chocolate" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:src="@color/antiquewhite" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="?actionBarSize"
                        android:layout_height="?actionBarSize"
                        android:background="@android:color/transparent"
                        android:padding="20dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/left"
                        app:srcCompat="@drawable/left" />

                    <ImageView
                        android:id="@+id/menu"
                        android:layout_width="?actionBarSize"
                        android:layout_height="?actionBarSize"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:background="@android:color/transparent"
                        android:padding="20dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/share"
                        app:srcCompat="@drawable/menu" />

                    <ImageView
                        android:layout_width="?actionBarSize"
                        android:layout_height="?actionBarSize"
                        android:layout_toLeftOf="@+id/menu"
                        android:background="@android:color/transparent"
                        android:padding="20dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/menu"
                        app:srcCompat="@drawable/share" />

                </RelativeLayout>

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:paddingLeft="10dp"
                    android:hint="写点评"
                    android:background="@drawable/shape_button"/>

                <ImageView
                    android:layout_width="?actionBarSize"
                    android:layout_height="?actionBarSize"
                    android:padding="10dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/shoucang" />

                <ImageView
                    android:layout_width="?actionBarSize"
                    android:layout_height="?actionBarSize"
                    android:padding="10dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/didian" />

                <ImageView
                    android:layout_width="?actionBarSize"
                    android:layout_height="?actionBarSize"
                    android:padding="10dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/xingchen" />

            </LinearLayout>

        </android.support.design.widget.AppBarLayout>

    </RelativeLayout>

</RelativeLayout>
